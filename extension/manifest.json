{
    "manifest_version": 3,
    "name": "Helper",
    "version": "1.0.0",
    "description": "Localhost helper",
    "permissions": [
        "storage",
        "activeTab"        
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "worker.js"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    }
}